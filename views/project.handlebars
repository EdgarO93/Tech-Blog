<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{project.user.name}} on {{format_date date_created}}</p>

  {{!-- <button class="btn btn-primary">Comment on this post</button> --}}
  </p>
</div>

{{!-- Add Comment --}}
<div class="padding-20">
    <form id="comment-form " class="padding-20">
        <label for="comment-text">Leave A Comment</label>
        <input class="padding-20" type="textarea" name="comment-text" id="comment-text">
        <button class="padding-20" id="post-comment-btn">Post!</button>
    </form>
</div>
{{!-- Handle the comments --}}
{{#each project.comments as |aComment|}}
{{> comments aComment}}
{{/each}}
