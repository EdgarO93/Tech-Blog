<div class="card single-post-padding">
    <h1 id="post-title" class="post-header">{{name}} </h1>
    <h4>Posted by {{user.name}} on {{format_date date_created}}</h4>
    <div class="container">
        <p id="post-body" class="post-text post-text-padding">{{description}}</p>
    </div>
    {{!-- If this is my post i can edit and delete it --}}
    {{#if currentUser}}
    <button id="edit-btn">Edit</button>
    <button id="delete-btn">Delete</button>
    {{/if}}
</div>
{{!-- Add Comment --}}
<div class="padding-20">
    <form id="comment-form " class="padding-20">
        <label for="comment-text">Leave A Comment</label>
        <input class="padding-20" type="textarea" name="comment-text" id="comment-text">
        <button class="padding-20" id="post-comment-btn">Post!</button>
    </form>
</div>
{{!-- Handle the comments --}}
{{#each project.comments as |Comment|}}
{{> post.Comment}}
{{/each}}
